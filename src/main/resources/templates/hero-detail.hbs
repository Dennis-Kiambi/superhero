{{#partial "content"}}

    <p>Description: {{ task.description }}</p>
    <p>Category of this hero: {{ squad.name }}</p>
    <h5>
        Hero status:
        {{#if hero.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}
    </h5>
    <p>
        <a href="/heroes/{{hero.id}}/edit">Edit this hero</a><br>
        <a href="/squads/{{hero.squadsId}}/heroes/{{hero.id}}/delete">DELETE this hero</a>
    </p>

{{/partial}}

{{> layout.hbs}}