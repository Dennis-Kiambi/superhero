{{#partial "content"}}
        <div class="container">
            <h5>This is an app to add and manage lists of superheroes, their capabilities and squads</h5>
           <hr>
            <div class="row">
                <div class="col-md-6">
                    <h5>These are the squads in which our brave heroes serve:</h5>
                    {{#if squads}}
                        {{#each squads}}
                            <p>{{squadName}}</p>
                            <a href="/squads/{{id}}" class="btn btn-outline-success">More >></a>
                        {{/each}}
                    {{/if}}
                </div>
                <div class="col-md-6">
                    <p>List of all heroes:</p>
                    {{#if heroes}}
                        {{#each heroes}}
                            <p>{{heroName}}</p>
                            <a href="/heroes/{{id}}" class="btn btn-outline-success">More >></a>
                        {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
{{/partial}}
<!--footer-->
{{#partial "footer"}}
    <footer>
    </footer>
{{/partial}}
{{> layout.hbs}}