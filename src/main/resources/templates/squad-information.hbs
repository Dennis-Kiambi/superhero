{{#partial "content"}}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                {{#if squad}}
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Squad's Name: {{squad.squadName}}</h5>
                            <p class="card-text">
                            <ul class="list-group list-group-flush">
                            <li class="list-group-item" id="data8">Squad's cause: {{squad.squadPurpose}}</li>
                            <li class="list-group-item" id="data8">Superheroes in squad: {{squad.squadNumber}}</li>
                            <li class="list-group-item" id="data8">Squad's Group: {{squad.squadGroup}}</li>
                        </ul>
                            <div>
                                <a href="/deletesquad/{{squad.id}}" class="btn btn-outline-danger">Erase</a>
                                <a href="/editsquad/{{squad.id}}" class="btn btn-outline-success">Update</a>
                            </div>
                        </div>
                    </div>
                {{/if}}
            </div>

            <div class="col-md-6">
                {{#if heroes}}
                    {{#each heroes}}
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Hero's name: {{heroName}}</h5>
<!--                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>-->
                            <a href="/heroes" class="btn btn-outline-info">More >></a>
                        </div>
                    </div>
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </div>

{{/partial}}
<!--footer-->
{{#partial "footer"}}
    <footer>
    </footer>
{{/partial}}
{{> layout.hbs}}