{{#partial "content"}}
    <div class="data-image"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                {{#if squad}}
                    <div class="card text-white mb-3">
                        <div class="card-header">
                            <p>Squad's Name: {{squad.squadName}}</p>
                        </div>

                        <div class="card-body mb-3">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item" id="data8">Squad's cause: {{squad.squadPurpose}}</li>
                                <li class="list-group-item" id="data8">Superheroes in squad: {{squad.squadNumber}}</li>
                                <li class="list-group-item" id="data8">Squad's Group: {{squad.squadGroup}}</li>
                            </ul>
                        </div>
                    </div>
                {{/if}}

                <div>
                    <a href="/deletesquad/{{squad.id}}" class="btn btn-danger">Erase</a>
                    <a href="/editsquad/{{squad.id}}" class="btn btn-danger">Update</a>
                </div>
            </div>

            <div class="col-md-6">
                {{#if heroes}}
                    {{#each heroes}}
                        <p>{{heroName}}</p>
                        <a href="/heroes/{{id}}" class="btn btn-info">Details</a>
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </div>

{{/partial}}
<!--footer-->
{{#partial "footer"}}
    <footer>
    </footer>
{{/partial}}
{{> layout.hbs}}