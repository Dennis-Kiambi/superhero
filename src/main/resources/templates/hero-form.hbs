
{{#partial "content"}}
    <div class="container">
        <h5>Add a Hero</h5>
        <hr>
        <form method="Post" action="/addhero">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Hero's Name">
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="power">Power</label>
                            <input type="text" class="form-control" id="power" name="power" placeholder="Hero's Power">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="weakness">Weakness</label>
                            <input type="text" class="form-control" id="weakness" name="weakness" placeholder="Hero's Weakness">
                        </div>
                    </div>
                    <div class="container">
                    <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="age">Age</label>
                            <input type="number" class="form-control" id="age" name="age" placeholder="Age">
                        </div>
                    </div>
                    </div>
                        <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="squad">Squad</label>
                                 <select class="form-control" id="squad" name="squad" placeholder="Hero's squad" required>
                                    {{#if squads}}
                                        {{#each squads}}
                                            <option value="{{id}}">{{squadName}}</option>
                                     {{/each}}
                                 {{/if}}
                                </select>
                                </div>
                            </div>
                        </div>
                </div>
                <button type="submit" class="btn btn-outline-success">Submit</button>
            </div>
        </form>
    </div>
{{/partial}}
<!--footer-->
{{#partial "footer"}}
    <footer>
    </footer>
{{/partial}}
{{> layout.hbs}}