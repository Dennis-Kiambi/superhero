{{#partial "content"}}
    {{#if editHero}}
        <h1>Edit this Hero!</h1>
        <form action="/heroes/{{hero.id}}" method="post">
            <br>
            <label for="description">Edit this hero's description</label>
            <input id="description" name="description" type="text" value="{{hero.description}}">
            <br>
            <label for="squadId">Update this hero's squad:</label>
            <select id="squadId" name="squadId">
                {{#each squads}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right squad?<a href="/squads/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}

        <div class="container">
        <h5>Add Squad</h5>
        <hr>
        <form method="Post" action="/addhero">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Hero Name">
            </div>
            <div class="form-group">
                <label for="power">Power</label>
                <input type="text" class="form-control" id="power" name="power" placeholder="Hero Power">
            </div>
            <div class="form-group">
                <label for="weakness">Weakness</label>
                <input type="text" class="form-control" id="weakness" name="weakness" placeholder="Hero Weakness">
            </div>
            <div class="form-group">
                <label for="age">Age</label>
                <input type="text" class="form-control" id="age" name="age" placeholder="Hero Age">
            </div>
            <div class="form-group">
                <label for="squad">Squad</label>
                <select class="form-control" id="squad" name="squad">
                    {{#if squads}}
                        {{#each squads}}
                            <option value="{{id}}">{{squadName}}</option>
                        {{/each}}
                    {{/if}}
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

{{/if}}

{{/partial}}

{{> layout.hbs}}