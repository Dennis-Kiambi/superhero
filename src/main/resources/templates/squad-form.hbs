{{#partial "content"}}

    <div class="container">
        <h5>Add Squad</h5>
        <hr>
    {{#if editSquad}}
            <h1>Edit this category!</h1>
            <form action="/squads/{{squad.id}}" method="post">
                <label for="name">Edit this squad's name</label>
                <input id="newSquadName" name="newSquadName" type="text" value="{{squad.name}}">
                <button type="submit" class="btn btn-default">Go!</button>
            </form>
    {{else}}
        <h5>Add new squad</h5>
        <form method="Post" action="/addsquad">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Squad Name">
            </div>
            <div class="form-group">
                <label for="cause">Cause</label>
                <input type="text" class="form-control" id="cause" name="cause" placeholder="Squad Cause">
            </div>
            <div class="form-group">
                <label for="size">Size</label>
                <input type="number" class="form-control" id="size" name="size" placeholder="Squad Size">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    {{/if}}
{{/partial}}

{{> layout.hbs}}